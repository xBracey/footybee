{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "target": "ES6",
    "baseUrl": "./",
    "paths": {
      "assets": ["src/site/assets/index"],
      "data": ["src/site/data/index"],
      "components": ["src/site/components/index"],
      "components/*": ["src/site/components/*"],
      "theme": ["src/site/theme/index"],
      "lib": ["src/site/lib/index"],
      "templates": ["src/site/templates/index"],
      "redux/actions": ["src/site/redux/actions/index"],
      "redux/reducers": ["src/site/redux/reducers/index"],
      "redux/requests": ["src/site/redux/requests/index"],
      "redux/store": ["src/site/redux/store"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "exclude": ["node_modules/**", ".vscode/.templates/*.ts"],
  "include": ["**/*.ts", "**/*.tsx"]
}
